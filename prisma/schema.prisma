generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Region {
  NORTH
  SOUTH
  EAST
  WEST
}

model Material {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String
  category        String
  manufacturer    String
  price           Int      // stored in paise
  unit            String
  region          Region
  imageUrl        String?
  inStock         Boolean
  stockQty        Int
  minDeliveryDays Int
  maxDeliveryDays Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  orders          Order[]
}

model Order {
  id            String   @id @default(cuid())
  materialId    String
  quantity      Int
  pincode       String
  deliveryDays  Int
  totalPrice    Int
  createdAt     DateTime @default(now())

  material      Material @relation(fields: [materialId], references: [id])
}
